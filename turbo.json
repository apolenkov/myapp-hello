{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "lint": {
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "check:arch": {
      "inputs": [".dependency-cruiser.cjs", "src/**/*.ts"]
    },
    "format:check": {
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.json",
        "**/*.md",
        "**/*.css",
        ".prettierrc*",
        ".prettierignore"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
