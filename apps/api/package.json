{
  "name": "@myapp/api",
  "version": "1.0.0",
  "private": true,
  "description": "Production NestJS REST API with PostgreSQL, JWT auth, and OpenTelemetry",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "nest start --watch",
    "build": "nest build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format:check": "prettier --check .",
    "check:arch": "depcruise src --config .dependency-cruiser.cjs"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.14",
    "@nestjs/config": "^4.0.3",
    "@nestjs/core": "^11.1.14",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/platform-express": "^11.1.14",
    "@nestjs/swagger": "^11.2.6",
    "@nestjs/throttler": "^6.5.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-prometheus": "^0.212.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.212.0",
    "@opentelemetry/instrumentation-express": "^0.60.0",
    "@opentelemetry/instrumentation-http": "^0.212.0",
    "@opentelemetry/instrumentation-pg": "^0.64.0",
    "@opentelemetry/resources": "^2.5.1",
    "@opentelemetry/sdk-node": "^0.212.0",
    "@opentelemetry/semantic-conventions": "^1.40.0",
    "@sentry/nestjs": "^10.40.0",
    "@sentry/opentelemetry": "^10.39.0",
    "helmet": "^8.1.0",
    "nestjs-pino": "^4.6.0",
    "pg": "^8.19.0",
    "pino": "^10.3.1",
    "pino-http": "^11.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@myapp/eslint-config": "*",
    "@myapp/typescript-config": "*",
    "@nestjs/cli": "^11.0.16",
    "@nestjs/testing": "^11.1.14",
    "@swc/cli": "^0.8.0",
    "@swc/core": "^1.15.17",
    "@types/express": "^5.0.6",
    "@types/node": "^25.3.2",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^7.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "dependency-cruiser": "^17.3.8",
    "eslint": "^10.0.2",
    "supertest": "^7.2.2",
    "typescript": "^5.9.3",
    "unplugin-swc": "^1.5.9",
    "vitest": "^4.0.18"
  }
}
