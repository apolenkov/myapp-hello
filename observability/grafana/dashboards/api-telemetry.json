{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "Grafana Cloud Prometheus (Mimir)",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    },
    {
      "name": "DS_LOKI",
      "label": "Loki",
      "description": "Grafana Cloud Loki",
      "type": "datasource",
      "pluginId": "loki",
      "pluginName": "Loki"
    },
    {
      "name": "DS_TEMPO",
      "label": "Tempo",
      "description": "Grafana Cloud Tempo",
      "type": "datasource",
      "pluginId": "tempo",
      "pluginName": "Tempo"
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "description": "Unified API observability: RED metrics, logs, traces — all in one place",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 2,
  "id": null,
  "links": [],
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 1,
      "title": "RED Metrics (Rate / Errors / Duration)",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          },
          "unit": "reqps"
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 },
      "id": 2,
      "title": "Request Rate",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=~\"$job\"}[5m]))",
          "legendFormat": "req/s"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          },
          "unit": "percent"
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 1 },
      "id": 3,
      "title": "Error Rate %",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=~\"$job\", status_code=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=~\"$job\"}[5m])) * 100",
          "legendFormat": "5xx %"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.5 },
              { "color": "red", "value": 1 }
            ]
          },
          "unit": "s"
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 },
      "id": 4,
      "title": "p95 Latency",
      "type": "stat",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=~\"$job\"}[5m])) by (le))",
          "legendFormat": "p95"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "id": 5,
      "title": "Up",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=~\"$job\"}",
          "legendFormat": "{{ instance }}"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "id": 10,
      "title": "Traffic & Latency",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": { "unit": "reqps", "custom": { "drawStyle": "line", "fillOpacity": 20 } }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "id": 11,
      "title": "Request Rate by Status Code",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=~\"$job\"}[5m])) by (status_code)",
          "legendFormat": "HTTP {{ status_code }}"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": { "unit": "s", "custom": { "drawStyle": "line", "fillOpacity": 10 } }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "id": 12,
      "title": "Latency Percentiles",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=~\"$job\"}[5m])) by (le))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=~\"$job\"}[5m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=~\"$job\"}[5m])) by (le))",
          "legendFormat": "p99"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "id": 20,
      "title": "OTel HTTP Instrumentation (auto)",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": { "unit": "ms", "custom": { "drawStyle": "line", "fillOpacity": 10 } }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 15 },
      "id": 21,
      "title": "HTTP Server Duration (OTel auto)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum(rate(http_server_request_duration_seconds_bucket{job=~\"$job\"}[5m])) by (le))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_request_duration_seconds_bucket{job=~\"$job\"}[5m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_server_request_duration_seconds_bucket{job=~\"$job\"}[5m])) by (le))",
          "legendFormat": "p99"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": { "unit": "ms", "custom": { "drawStyle": "line", "fillOpacity": 10 } }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 15 },
      "id": 22,
      "title": "HTTP Client Duration (Sentry, external APIs)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum(rate(http_client_duration_bucket{job=~\"$job\"}[5m])) by (le, net_peer_name))",
          "legendFormat": "{{ net_peer_name }} p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_client_duration_bucket{job=~\"$job\"}[5m])) by (le, net_peer_name))",
          "legendFormat": "{{ net_peer_name }} p95"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 },
      "id": 30,
      "title": "Node.js Runtime",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": { "unit": "percent", "custom": { "drawStyle": "line", "fillOpacity": 20 } }
      },
      "gridPos": { "h": 7, "w": 8, "x": 0, "y": 24 },
      "id": 31,
      "title": "CPU Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{job=~\"$job\"}[5m]) * 100",
          "legendFormat": "{{ instance }}"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": { "unit": "bytes", "custom": { "drawStyle": "line", "fillOpacity": 20 } }
      },
      "gridPos": { "h": 7, "w": 8, "x": 8, "y": 24 },
      "id": 32,
      "title": "Memory (RSS + Heap)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=~\"$job\"}",
          "legendFormat": "RSS"
        },
        {
          "expr": "nodejs_heap_size_used_bytes{job=~\"$job\"}",
          "legendFormat": "Heap Used"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": { "unit": "s", "custom": { "drawStyle": "line", "fillOpacity": 10 } }
      },
      "gridPos": { "h": 7, "w": 8, "x": 16, "y": 24 },
      "id": 33,
      "title": "Event Loop Lag",
      "type": "timeseries",
      "targets": [
        {
          "expr": "nodejs_eventloop_lag_seconds{job=~\"$job\"}",
          "legendFormat": "avg"
        },
        {
          "expr": "nodejs_eventloop_lag_p99_seconds{job=~\"$job\"}",
          "legendFormat": "p99"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 31 },
      "id": 40,
      "title": "Logs (Loki)",
      "type": "row"
    },
    {
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 5, "w": 24, "x": 0, "y": 32 },
      "id": 41,
      "title": "Log Volume by Level",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(count_over_time({service=~\"$service\"} [1m])) by (level)",
          "legendFormat": "{{ level }}"
        }
      ]
    },
    {
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 37 },
      "id": 42,
      "title": "Error & Warn Logs",
      "type": "logs",
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      },
      "targets": [
        {
          "expr": "{service=~\"$service\"} | json | level=~\"error|warn\"",
          "legendFormat": ""
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 45 },
      "id": 50,
      "title": "Traces (Tempo)",
      "type": "row"
    },
    {
      "datasource": { "type": "tempo", "uid": "${DS_TEMPO}" },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 46 },
      "id": 51,
      "title": "Recent Traces",
      "type": "table",
      "targets": [
        {
          "queryType": "traceqlSearch",
          "serviceName": "myapp-hello",
          "limit": 20,
          "filters": [
            {
              "id": "service-name",
              "tag": "service.name",
              "operator": "=",
              "value": ["myapp-hello"],
              "valueType": "string",
              "scope": "resource"
            }
          ]
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["myapp-hello", "api", "observability", "RED"],
  "templating": {
    "list": [
      {
        "current": { "selected": false, "text": "myapp", "value": "myapp" },
        "hide": 0,
        "includeAll": true,
        "label": "Job",
        "multi": false,
        "name": "job",
        "query": "label_values(up, job)",
        "refresh": 2,
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
      },
      {
        "current": {
          "selected": false,
          "text": "myapp-hello-prod.*",
          "value": "myapp-hello-prod.*"
        },
        "hide": 0,
        "includeAll": true,
        "label": "Service",
        "multi": false,
        "name": "service",
        "query": "label_values(service)",
        "refresh": 2,
        "type": "query",
        "datasource": { "type": "loki", "uid": "${DS_LOKI}" }
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "myapp-hello — API Telemetry",
  "uid": "myapp-api-telemetry",
  "version": 1
}
