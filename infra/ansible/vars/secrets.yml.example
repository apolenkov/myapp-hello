---
# Copy to secrets.yml and fill in actual values
# NEVER commit secrets.yml — it's in .gitignore
#
# For Ansible Vault encryption:
#   ansible-vault encrypt infra/ansible/vars/secrets.yml
#   ansible-playbook ... --ask-vault-pass

# ── Dokploy API ──────────────────────────────────────────────────────
dokploy_url: http://185.239.48.55:3000
dokploy_token: <your-dokploy-api-token>

# ── Application IDs (Dokploy) ───────────────────────────────────────
app_id_prod: <dokploy-app-id-prod>
app_id_staging: <dokploy-app-id-staging>
app_id_dev: <dokploy-app-id-dev>

# ── PostgreSQL IDs (Dokploy) ────────────────────────────────────────
postgres_id_prod: <dokploy-postgres-id-prod>
postgres_id_staging: <dokploy-postgres-id-staging>
postgres_id_dev: <dokploy-postgres-id-dev>

# ── Database Credentials ────────────────────────────────────────────
# Generate: openssl rand -base64 32
db_password_prod: <prod-db-password>
db_password_staging: <staging-db-password>
db_password_dev: <dev-db-password>

db_user_prod: prod_user
db_user_staging: staging_user
db_user_dev: dev_user

db_name_prod: myapp_prod
db_name_staging: myapp_staging
db_name_dev: myapp_dev

db_host_prod: postgres-prod
db_host_staging: postgres-staging
db_host_dev: postgres-dev

# ── JWT Secrets ──────────────────────────────────────────────────────
# Generate: openssl rand -base64 48
jwt_secret_prod: <prod-jwt-secret-64-chars>
jwt_secret_staging: <staging-jwt-secret-64-chars>
jwt_secret_dev: <dev-jwt-secret-64-chars>

# ── Sentry ───────────────────────────────────────────────────────────
sentry_dsn: <sentry-dsn-url>

# ── Yandex Object Storage (S3-compatible) ────────────────────────────
s3_access_key: <yandex-access-key-id>
s3_secret_key: <yandex-secret-access-key>
s3_bucket: myapp-hellp
s3_endpoint: https://storage.yandexcloud.net
s3_region: ru-central1

# ── OpenTelemetry / Grafana Cloud ────────────────────────────────────
# Get from Grafana Cloud → Stack → OpenTelemetry section
# endpoint: copy from "OTLP endpoint" field (without /v1/traces suffix)
# write token scope: traces:write
# read token scope: traces:read (for Tempo search/TraceQL verification)
# headers: "Authorization=Basic <base64(instanceId:grafanaTracesWriteToken)>"
# grafana_url: copy from "Your Grafana instance" URL (for deploy annotations)
otel_endpoint: https://otlp-gateway-prod-eu-west-2.grafana.net/otlp
otel_headers: "Authorization=Basic <base64(1489367:apiToken)>"
grafana_url: https://apolenkov.grafana.net
grafana_stack_user: 1489367
grafana_traces_write_token: <glc-traces-write-token>
grafana_tempo_query_url: https://tempo-prod-10-prod-eu-west-2.grafana.net/tempo
grafana_traces_read_token: <glc-traces-read-token>

# Get from Grafana Cloud → Stack → OpenTelemetry section
# endpoint: copy from "OTLP endpoint" field (without /v1/traces suffix)
# write token scope: traces:write
# read token scope: traces:read (for Tempo search/TraceQL verification)
# headers: "Authorization=Basic <base64(instanceId:grafanaTracesWriteToken)>"
# grafana_url: copy from "Your Grafana instance" URL (for deploy annotations)
otel_endpoint: https://otlp-gateway-prod-eu-west-2.grafana.net/otlp
otel_headers: "Authorization=Basic <base64(instanceId:apiToken)>"
grafana_url: https://<stack-name>.grafana.net
grafana_stack_user: <stack-instance-id>
grafana_traces_write_token: <glc-traces-write-token>
grafana_tempo_query_url: https://<stack-name>.grafana.net/tempo
grafana_traces_read_token: <glc-traces-read-token>

# ── VPS Access ───────────────────────────────────────────────────────
vps_host: 185.239.48.55
vps_ssh_key: ~/.ssh/vps_key
